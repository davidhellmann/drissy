<header itemscope itemtype="http://schema.org/WPHeader">
    {% if opt.el.nav %}
        {% include '_elements/nav/' ~ opt.el.nav with {
            opt : {
                data: navigationMain.globalNavigationMain.all() ?? null
            }
        } only %}
    {% endif %}
    {% block headerContent %}
        <div class="w-full max-w-3xl mx-auto px-4 mt-4">
            {% if opt.el.image %}
                <div class="relative h-64 md:h-128 w-full text-center flex flex-col justify-center">
                    {% include '_elements/img/default' with {
                        opt : {
                            data: opt.el.image,
                            imager: opt.imager,
                        }
                    } only %}
                    {% if opt.el.image.caption %}
                        <div class="ml-4 absolute pin-b mt-4 text-white text-sm ">
                            {{ opt.el.image.caption }}
                            {% if opt.el.image.source %}
                                /
                                <a class="text-white hover:underline"
                                   href="{{ opt.el.image.sourceUrl }}">{{ opt.el.image.source }}</a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            {% if opt.el.title %}
                <h1 class="mt-32 text-center" itemprop="headline">
                    {{ opt.el.title }}
                </h1>
            {% endif %}
            {% if opt.el.description %}
                <p class="mt-8" itemprop="description">
                    {{ opt.el.description|striptags }}
                </p>
            {% endif %}
        </div>
    {% endblock %}
</header>
