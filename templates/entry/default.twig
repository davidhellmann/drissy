{% extends '_layouts/_layout.twig' %}

{# -- inline css -- #}
{% block _inline_css %}
    <style>
        {{source (_self ~ '_critical.min.css', ignore_missing=true)}}
    </style>
{% endblock %}

{% block header %}

    {% include '_components/header/default.twig' with {
        opt : {
            imager: {
                lazy: false,
                mediaBox: false,
                class: 'absolute pin-t pin-l w-full h-full',
            },
            el: {
                nav: 'default',
                image: entry.entryImage.one() ?? entry.introImage.one() ?? null,
                title: entry.introHeadline ?? entry.title,
                description: entry.introText,
            }
        }
    } only %}

{% endblock %}

{% block content %}

    {% block itemContent %}
        {% if entry.contentBuilder %}
            {% include '_matrix.twig' with {
                matrix : entry.contentBuilder,
            } only %}
        {% endif %}
    {% endblock %}

{% endblock %}
