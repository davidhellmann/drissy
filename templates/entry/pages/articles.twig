{# @var craft \craft\web\twig\variables\CraftVariable #}
{# @var entry \craft\elements\Entry #}

{#
  Pages: News
  ------------------------------------------------------------
#}

{% extends "entry/default" %}
{% import "_macros/_macros.twig" as macro %}

{% set entries = craft.entries({
    section: entry.title,
    relatedTo: null,
    limit: 4,
    offset: null
})
%}

{% paginate entries as pageInfo, pageEntries %}

    {% block head %}
        {% if pageInfo.prevUrl %}
            <link rel="prev" href="{{ pageInfo.prevUrl }}">
        {% endif %}
        {% if pageInfo.nextUrl %}
            <link rel="next" href="{{ pageInfo.nextUrl }}">
        {% endif %}
    {% endblock %}

    {% block content %}

        {% block itemContent %}
            {{ parent() }}
        {% endblock %}

        {# -- Cache -- #}
        {% cache globally using key 'articles-archive-' ~ craft.app.request.pathInfo ~ (craft.app.request.pageNum ? '/p' ~ craft.app.request.pageNum : '') %}

            <div class="gridWrap mx-auto max-w-3xl mt-32 flex flex-wrap justify-center">
                {% for entry in pageEntries %}
                    {% include '_item' %}
                {% endfor %}

            </div>

            <div class="container text-center mt-8">
                {{ macro.pagination(pageInfo, craft, {}) }}
            </div>
            {# -- Cache End -- #}
        {% endcache %}
    {% endblock %}
