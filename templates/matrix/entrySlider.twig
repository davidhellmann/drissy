
{% extends "matrix/default.twig" %}

{% set slider = {
    imager: {
        class: 'w-full h-screen',
        lazy: false,
        mediaBox: false,
        objectFit: true,
        objectFitValue: 'cover',
    },
    data: block.entry.all(),
    el: {
        wrapper: true,
        image: true,
        articleImageCaption: false,
        introHeadline: false,
        introTeaser: true,
        introCta: true,
        linkWrap: false,
        arrows: false,
        bullets: true,
    },
    cn: {
        wrapper: 'entrySlider',
        slider: 'js-slider',
        track: 'glide__track',
        slides: 'h-screen w-full',
        articleImageCaption: '',
        container: 'absolute top-0 bottom-0 w-full h-full',
        containerInner: 'w-full h-full relative flex px-4',
        body: 'flex mt-auto mb-24 text-center overflow-hidden w-full justify-center flex-wrap',
        introHeadline: 'mx-auto text-slider lg:text-max text-white  word-break w-full',
        introCta: 'font-bold mx-auto text-black bg-white px-8 py-3 md:px-8 md:py-3 hover:bg-black hover:text-white text-sm lg:text-button c-link rounded-full mt-16',
        introTeaser: 'mx-4 break-words introTeaser mx-auto w-full',
        introHeadlineSpan: 'c-link-hover:bg-shadow',
        linkWrap: 'c-link',
        arrows: 'w-full h-full glide__arrows',
        arrowLeft: 'hidden md:flex ml-8 h-full absolute left-0 top-0 bottom-0 glide__arrow glide__arrow--left',
        arrowRight: 'hidden md:flex mr-8 h-full absolute right-0 top-0 bottom-0 glide__arrow glide__arrow--right',
        bullets: 'items-center h-8 mb-4 mb:mb-8 w-full absolute bottom-0 slider__bullets glide__bullets flex justify-center',
        bullet: 'glide__bullet',
    },
} %}

{% set carousel = {
    imager: {
        class: 'w-full h-64',
    },
    data: block.entry.all(),
    el: {
        wrapper: true,
        image: true,
        articleImageCaption: false,
        introHeadline: true,
        introTeaser: false,
        linkWrap: true,
        arrows: true,
        bullets: false,
    },
    cn: {
        wrapper: 'entryCarousel bg-brand mx-auto pb-4 pt-8',
        slider: 'lg:max-w-xl xl:max-w-2xl mx-auto js-carousel',
        track: 'glide__track',
        slides: 'h-80 w-full',
        articleImageCaption: '',
        container: 'absolute top-0 bottom-0 w-full h-full',
        containerInner: 'w-full h-full relative flex',
        body: 'absolute bottom-0 flex flex-col text-center overflow-hidden h-16 w-full',
        introHeadline: 'mx-auto mb-autoA mt-4A my-auto text-xl font-serif text-white cursor-pointer word-break',
        introHeadlineSpan: 'c-link-hover:bg-shadow',
        introCta: 'mx-auto text-fluid font-serif text-white cursor-pointer word-break',
        linkWrap: 'c-link',
        arrows: 'w-full h-full glide__arrows',
        arrowLeft: '-ml-128 lg:-ml-16 -mt-8 h-full absolute left-0 top-0 bottom-0 glide__arrow glide__arrow--left',
        arrowRight: '-mr-128 lg:-mr-16 -mt-8 h-full absolute right-0 top-0 bottom-0 glide__arrow glide__arrow--right',
        bullets: 'items-center h-8 mb-4 md:mb-8 w-full absolute bottom-0 slider__bullets glide__bullets flex justify-center',
        bullet: 'glide__bullet',
    },
} %}

{# check slider layout #}
{% if block.layout == 'js-carousel' %}
    {% set defaults = carousel %}
{% else %}
    {% set defaults = slider %}
{% endif %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{% block blockContent %}
    {% include "_elements/slider/default.twig" with {
        defaults: {},
    } %}
{% endblock %}
