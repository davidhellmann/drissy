{% extends "matrix/default" %}

{% block blockContent %}
    {# TODO: f√ºr ratio muss wrapper und mediabox an sein, object fit hat keine wirkung mehr #}
    <figure
        class="w-full lg:{{ block.columns ?? 'w-full' }}"
        itemprop="associatedMedia" itemscope
        itemtype="http://schema.org/ImageObject">
        {% include '_elements/img/default' with {
            data : {
                imager: {
                    options: {
                        objectFit: false,
                        mediaBox: true,
                        wrapper: true,
                        class: 'w-full h-full',
                        svg: 'max-w-2xl md:mx-12'
                    },
                    images: {
                        imageLandscape: block.image.one() ?? null,
                    }
                },
            }
        } only %}
        {% if block.caption %}
            <figcaption class="text-sm mt-2"
                        itemprop="caption description">{{ image.caption }}</figcaption>
        {% endif %}
    </figure>
{% endblock %}
