{% extends "matrix/default" %}

{% block blockContent %}
<div class="gridWrap max-w-3xl mx-auto mt-8 px-2">
        {% set image = block.image.one() %}
        {% if image %}
            <figure
                class="gridElement px-2 w-full"
                itemprop="associatedMedia" itemscope
                itemtype="http://schema.org/ImageObject">
                        {% include '_elements/img/default' with {
                            opt : {
                                data: image,
                                imager: {
                                    blurUp: true,
                                    objectFit: true,
                                    ratio: block.ratio,
                                    alt: image.title,
                                }
                            }
                        } only %}
                {% if block.caption %}
                    <figcaption
                        itemprop="caption description">{{ image.caption }}</figcaption>
                {% endif %}
            </figure>
        {% endif %}
    </div>
{% endblock %}
