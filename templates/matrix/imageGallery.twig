{% extends "matrix/default" %}

{% block blockContent %}

    <div
        class="o-wrap o-wrap--grid js-gallery"
        itemscope itemtype="http://schema.org/ImageGallery">
        {% for image in block.images.all() %}
            <figure
                class="o-wrap__item o-wrap__item--grid w-full md:w-1/2 lg:{{- block.columns -}}"
                itemprop="associatedMedia" itemscope
                itemtype="http://schema.org/ImageObject">
                <a href="{{ image.url() }}" itemprop="contentUrl"
                   data-size="{{ image.getWidth }}x{{ image.getHeight }}">
                        {% include '_elements/img/default' with {
                            opt : {
                                data: image,
                                imager: {
                                    blurUp: true,
                                    objectFit: true,
                                    ratio: block.ratio,
                                }
                            }
                        } only %}
                </a>
                {% if block.caption %}
                    <figcaption
                        itemprop="caption description">{{ image.caption }}</figcaption>
                {% endif %}
            </figure>
        {% endfor %}

    </div>

{% endblock %}
