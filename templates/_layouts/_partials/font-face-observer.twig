{% if not craft.app.config.general.devMode %}
    <style>
        {{ craft.twigpack.includeFileFromManifest("webfonts.css") }}
    </style>
    {% set fontsLoaded = getCookie('fonts-loaded') %}
    {% if fontsLoaded and fontsLoaded == assetHash %}
    {% else %}
        <script>
            {{ craft.twigpack.includeFileFromManifest("fontfaceobserver.js") }}
            {{ craft.twigpack.includeFileFromManifest("load-fonts.js") }}
        </script>
        {% do setCookie('fonts-loaded', assetHash, now | date_modify("+7 days").timestamp ) %}
    {% endif %}
{% endif %}
