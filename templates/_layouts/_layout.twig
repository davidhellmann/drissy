{# @var craft \craft\web\twig\variables\CraftVariable #}
{# @var entry \craft\elements\Entry #}

{#
Layout: Default
------------------------------------------------------------

#}

{% set assetHash = craft.twigpack.getModuleUri("styles.js") %}

{% set baseUrl = alias('@web') %}
    {%- minify -%}
        <!DOCTYPE html>
        {# -- Html Tag -- #}
        {% include '_layouts/_partials/html-tag.twig' %}
        <head>
            {# -- Seomatic -- #}
            {% hook 'seomaticRender' %}
            {# -- Head meta -- #}
            {% include '_layouts/_partials/head-meta.twig' %}
            {# -- criticalCss -- #}
            {% include '_layouts/_partials/critical-css.twig' %}
            {# -- Fontface Observer -- #}
            {% include '_layouts/_partials/font-face-observer.twig' %}
            {# -- inlineJs-- #}
            {% include '_layouts/_partials/inline-js.twig' %}
        </head>
        <body>
        {% block body %}
            {# -- Debug -- #}
            {% block debug %}
                {% include '_layouts/_partials/debug.twig' %}
            {% endblock %}
            <header>
                {% block header %}{% endblock %}
            </header>
            <main>
                <div class="px-4 max-w-3xl mx-auto"
                     id="app">
                    {% block content %}{% endblock %}
                </div>
            </main>
            <footer>
                {% block footer %}
                    {% include '_components/footer/default' with {
                        opt : {
                            data: contact.globalContact.all(),
                            el: {
                                nav: 'default',
                            },
                        },
                    } only %}
                {% endblock %}
            </footer>
        {% endblock %}
        {% block scripts %}
            <script>
                window.csrfTokenValue = "{{ craft.app.request.csrfToken|e('js') }}";
            </script>
        {% endblock %}
        {% if craft.app.config.general.devMode %}
            {{ craft.twigpack.includeJsModule("styles.js", true) }}
        {% endif %}
        {{ craft.twigpack.includeSafariNomoduleFix() }}
        {{ craft.twigpack.includeJsModule("app.js", true) }}
        </body>
        </html>
    {%- endminify -%}
