{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout.twig" %}

{# -- inline css -- #}
{% block _inline_css %}
    <!-- critical "offline.twig" -->
    <style>
        {{ craft.twigpack.includeFile('@webroot/dist/criticalcss/' ~ _self | split('.')[0] ~  '_critical.min.css') }}
    </style>
{% endblock %}

{% block content %}

    <section>
        <div>
            <p>
                Offline Error
            </p>
            <p>
                It looks like your device supports offline access!
            </p>
            <p>
                Much of this site is designed to work in offline mode—all our top-level pages are cached and available, as well as any pages you’ve previously viewed on this device.
            </p>
            <p>
                Unfortunately it seems you haven’t visited this page before, so some content may not be available until you connect to a network.
            </p>
        </div>
    </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
