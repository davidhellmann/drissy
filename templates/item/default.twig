{# @var craft \craft\web\twig\variables\CraftVariable #}
{# @var entry \craft\elements\Entry #}

{% block itemContent %}

    {% if block.layout is not defined or null %}
        {% set block = entry %}
    {% endif %}

    {% switch block.layout %}

    {% default %}
        {% include "_elements/article/default" with {
            opt : {
                imager: {
                    objectFit: true,
                    objectFitValue: 'cover',
                    class: 'w-full h-full',
                },
                data: entry,
                cta: 'mehr',
                el: {
                    gridElement: true,
                    articleHeaderLink: false,
                    articleImageCaption: false,
                    articleBody: true,
                    articleLink: true,
                },
                cn: {
                    gridElement: 'o-wrap__item o-wrap__item--grid w-full md:w-1/2',
                    article: 'h-64 c-link relative w-full overflow-hidden',
                    articleWrap: 'articleWrap h-64 sm:h-96 absolute pint-t pin-b pin-r pin-l bg-brand-85 w-full c-link-hover:transform-up transform-layoutA hover:transform-up',
                    articleContainer: 'articleContainer w-full',
                    articleInner: 'articleInner absolute pin-t flex flex-col text-center overflow-hidden h-full py-3 px-8 text-white c-link-hover:justify-center w-full',
                    articleHeader: 'mt-4  uppercase',
                    articleHeaderSpan: '',
                    articleHeaderLink: 'link-absolute',
                    articleBody: 'articleBody',
                    articleBodyParagraph: 'mt-8',
                    articleLink: 'mx-auto font-serif no-underline text-brand bg-white px-4 py-2 text-lg link-absolute',
                },
            }
        } %}

    {% endswitch %}


{% endblock %}
